<Window x:Class="MTC_wpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MTC_wpfApp"
        mc:Ignorable="d"
        MinWidth="800"
        MinHeight="450"
        Title="Главная страница" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <Button x:Name="clientTableButton" Click="clientTableButton_Click" Width="200" Height="50" Content="Список клиентов" Grid.Row="0"></Button>
            <Button x:Name="cityTableButton" Click="cityTableButton_Click" Margin="0,20,0,0" Width="200" Height="50" Content="Список городов" Grid.Row="1"></Button>
        </StackPanel>
        
    </Grid>
</Window>
